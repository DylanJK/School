@using WeddingsForYou.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        var user = Session["user"] as User;
    }
</head>
<body style="background-color:#a0d5f6">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Weddings For You", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                    <li>@Html.ActionLink("Plan", "MockUpPlan", "MockUpPlan")</li>
                    <li>@Html.ActionLink("Directory", "Directory", "Directory")</li>
                    <li>@Html.ActionLink("Magazine", "Magazine", "Magazine")</li>
                    <li>@Html.ActionLink("Forum", "Forum", "Forum")</li>
                
                    @if (user == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                        <li>@Html.ActionLink("Register", "Register", "Register")</li>
                    }
                    @if (user != null)
                    {
                        @*<h3>Welcome user.Name</h3>*@
                        <li>@Html.ActionLink(@user.Name, "UserProfile", "UserProfile")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Login");</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:azure">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Weddings For You All Rights Reserved</p>
            <p>For More Info or Any Inquiries Visit the @Html.ActionLink("Contact Us", "Contact", "Contact") Page</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
